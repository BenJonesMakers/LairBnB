<h1>Sign up here</h1>

<form action="/user" method="post">
  <input type="text" name="email" placeholder="Enter email" required="required"><br>
  <input type="password" name="password" placeholder="password" required="required" />
  <input type="password" name="password_confirmation" placeholder="Confirm Password" required="required" >
  <input type="submit" value="Sign up"/>
</form>


<form action="/login">
    <button class="submit-button">Login Page</button>
</form>

<% flash.keys.each do |type| %>
  <div data-alert class="flash <%= type %> alert-box radius">
    <%= flash[type] %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>
