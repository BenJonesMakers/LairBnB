<body>
  <h1 class="header">Hidden Lairs</h1>
  <form action="/spaces/new" method="get">
    <div class="container">
      <button class="add_button" type="submit" name="Add Space">Add Space</button>
    </div>
  </form>

  <% @space.each do |space| %>
  <div class="card" style="width: 18rem;">
    <form action="/spaces/pick_a_date" method="post">
      <img src="..." class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= space.name %></h5>
        <p class="description"><%= space.description %></p>
        <article class="price">£<%= space.price %></article>
        <button type="submit" class="btn btn-primary" name="id" value="<%= space.id %>">Pick</button>
      </div>
    </form>
  </div>
  <% end %>







